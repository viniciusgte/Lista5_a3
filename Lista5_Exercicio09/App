import java.util.Scanner;

public class App {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite um número inteiro:");
		int numInvertido = Invertido(sc.nextInt());
		
		System.out.println("O seu número invertido é: " + numInvertido);
	
        sc.close();
    }
	
	
	
	public static int Invertido(int numero) {
		String invertido = new StringBuilder(Integer.toString(numero)).reverse().toString();
		
		
		
		return Integer.parseInt(invertido);
	}
}
